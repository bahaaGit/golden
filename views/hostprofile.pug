include head
body
	include navbar
	.container#shift
		.row
			form#loginForm
				h1 Add Post
				.form-group
					p
					input#addAddress.inputs(type='text' name='address' placeholder='Address')
					p
					input#addTown.inputs(type='text' name='town' placeholder='Town')
					p
					input#addZipcode.inputs(type='text' name='zipcode' placeholder='ZipCode')
					p
					input#addHost.inputs(type='text' name='host' placeholder='Host')
					p
				.addBtns.btn.btn-primary
					button(type='button' onclick='addPost()').aBtn.btn Add Post
		p
		b
		p
		b
		.row
			for obj, index in posts
				.col-md-4.shift
					.post
						.map Map
						.description
							h4.address= obj.address
							.list
								.town= '- ' + obj.town
								.host= '- Host: ' + obj.host 
							btn.reqBtn(index) Delete
					