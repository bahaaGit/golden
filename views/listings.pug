include head
body
	include navbar
	.container#shift
		.row
			for obj, index in posts
				.col-md-4.shift
					.post
						.map
							img(border="0", src= obj.mapUrl, usemap="#map")
						
						.description
							h4.address= obj.address
							.list
								.town= '- ' + obj.town
								.host= '- HOST: ' + obj.host 
							a.btn.reqBtn(href='#' data-toggle='modal' data-target='#reqModal' + index) Request
					.modal.fade(tabindex='-1' role='dialog' id='reqModal' + index)
						.modal-dialog
							.modal-content
								.modal-header
									.modal-title= 'Request Space for: ' + obj.address
									button(type='button' class='close' data-dismiss='modal') &times;
								.modal-body
									.spaceDesc Brief Description of what you'll be storing
									textarea.textArea(cols='2' rows='5' maxlength='180' id='desc' + index)
								.modal-footer
									a.btn.subBtn(href='#') Submit